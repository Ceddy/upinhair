<!-- side menu -->
<div id='side-menu'>
  <!-- profile -->
  <div id='profile-info'>
    <div id='profile-picture'>
      <span>
        <%= current_user.name %>
      </span>
      <%= image_tag current_user.pic.url, :id=>"profile-avatar" %>
    </div>
  </div>

  <div id='profile-location'>
    <i class='icon-map-marker'>
      <span id='profile-city'>
        <%= current_user.location %>
      </span>
    </i>
  </div>

  <ul>
    <li>
      <i class='icon-user'>
        <span>Profile</span>
      </i>
    </li>
    
    <% if @customer %>
    <li>
      <i class='icon-search'>
        <span>Stylists</span>
      </i>
    </li>
    <% end %>
    
    <li>
      <i class='icon-calendar'>
        <span>Appointments</span>
      </i>
    </li>
    <li>
      <i class='icon-heart'>
        <span>Lookbook</span>
      </i>
    </li>
  </ul>
</div>